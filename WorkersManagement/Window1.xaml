<Window x:Class="WorkersManagement.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkersManagement"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#FF1E1E2F">
    <Grid>
        <!-- Gradient Top Banner -->
        <Border Height="80" VerticalAlignment="Top" Background ="Aquamarine" CornerRadius="0,0,20,20">
            <TextBlock Text="EmpiSoft" FontSize="26" FontWeight="Bold" 
                       Foreground="White" VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Icon Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0">
            <!-- Employee -->
            <StackPanel Margin="30" Width="100" Cursor="Hand">
                <Viewbox Width="60" Height="60">
                    <Canvas>
                        <Path Fill="OrangeRed" Data="M20,10 C20,4.48 24.48,0 30,0 C35.52,0 40,4.48 40,10 C40,15.52 35.52,20 30,20 C24.48,20 20,15.52 20,10 Z M15,25 C15,22.24 20.48,20 30,20 C39.52,20 45,22.24 45,25 L45,40 L15,40 Z"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="Employee" Foreground="White" FontSize="14" HorizontalAlignment="Center" Margin="5"/>
            </StackPanel>

            <!-- View -->
            <StackPanel Margin="30" Width="100" Cursor="Hand">
                <Viewbox Width="60" Height="60">
                    <Canvas>
                        <Path Fill="OrangeRed" Data="M0,0 L40,0 L40,40 L0,40 Z M10,10 L30,10 L30,30 L10,30 Z"/>
                        <Ellipse Fill="OrangeRed" Width="12" Height="12" Canvas.Left="14" Canvas.Top="14"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="View" Foreground="White" FontSize="14" HorizontalAlignment="Center" Margin="5"/>
            </StackPanel>

            <!-- Salary -->
            <StackPanel Margin="30" Width="100" Cursor="Hand">
                <Viewbox Width="60" Height="60">
                    <Canvas>
                        <Path Fill="OrangeRed" Data="M0,0 L50,0 L50,40 L0,40 Z M10,10 L40,10 M10,20 L30,20 M10,30 L20,30"/>
                        <TextBlock Text="$" Foreground="White" FontWeight="Bold"
                                   FontSize="18" Canvas.Left="35" Canvas.Top="25"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="Salary" Foreground="White" FontSize="14" HorizontalAlignment="Center" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
