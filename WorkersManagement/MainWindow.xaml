<Window x:Class="WorkersManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkersManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" 
        Background="Transparent" 
        AllowsTransparency="True"
        WindowStyle="None">
    <Border CornerRadius="15" Background="#FF1E1E2E">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                            <GradientStop Color="#8A2BE2" Offset="0.0"/>
                            <GradientStop Color="#FF007ACC" Offset="0.5"/>
                            <GradientStop Color="#FFFF4081" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                <Image Source="/Assets/logo.png" Width="250" Height="154" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                </Grid>

            <Grid Grid.Column="1" Background="#FF1E1E2E">
                <Button x:Name="CloseButton"
                        Content="X"
                        Width="30"
                        Height="30"
                        Background="#FF1E1E2E"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0 5 5 0"
                        Click="CloseButton_Click"/>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Image Source="/Assets/supervisor.png" Width="40" Height="40" Margin="0,0,10,0"/>
                        <TextBlock Text="Login"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/> 
                    </StackPanel>

                    <TextBlock Text="Username"
                               Foreground="White"
                               FontSize="14"
                               Margin="0 0 0 5"/>
                    <TextBox x:Name="UsernameBox"
                             Height="40"
                             Margin="0 0 0 15"
                             Background="#333"
                             Foreground="White"
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             BorderBrush="Transparent"
                             Style="{StaticResource RoundedTextBoxStyle}"/>

                    <TextBlock Text="Password"
                               Foreground="White"
                               FontSize="14"
                               Margin="0 0 0 5"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="40"
                                 Margin="0 0 0 20"
                                 Background="#333"
                                 Foreground="White"
                                 FontSize="16"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="Transparent"
                                 Style="{StaticResource RoundedPasswordBoxStyle}"/>

                    <Button Content="Login"
                            Width="250"
                            Height="45"
                            Background="#FF4081"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            Click="Login_Click"
                            Style="{StaticResource RoundedButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
